<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
    <link rel="stylesheet" href="checkout.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

</head>

<body>
    <%- include('../partials/nav') %>
    <% let alt = login_count==0? true : false; %>
    <div class="heading" style="margin: 30px 0px;">Checkout</div>
    <div class="full">
        <div class="content">
            <div class="main">
                <div id=dd1>
                    <form class="pay-form" >
                        <p id="ff1">Customer Information</p>
                        <span id="in1">
                            <input type="text" placeholder="Username or Password" required>
                        </span>
                        <p id="ff1">Billing Details</p>
                        <span id="in2">
                            <div style="margin-bottom: 20px;" class="row g-3">
                                <div class="col">
                                    <input type="text" class="form-control" placeholder="First name"
                                        aria-label="First name">
                                </div>
                                <div class="col">
                                    <input type="text" class="form-control" placeholder="Last name"
                                        aria-label="Last name">
                                </div>
                            </div>
                            <span id="in1">
                                <input type="text" placeholder="House No,Locality,Village" required>
                            </span>
                            <div style="margin-bottom: 20px;" class="row g-3">
                                <div class="col">
                                    <input type="text" class="form-control" placeholder="City" aria-label="City">
                                </div>
                                <div class="col">
                                    <input type="text" class="form-control" placeholder="Pin Code"
                                        aria-label="Pin Code">
                                </div>
                            </div>
                            <span id="in1">
                                <input type="text" placeholder="Phone Number" required>
                            </span>
                            <p id="ff1">Additional Information</p>
                            <span id="in1">
                                <input type="text" placeholder="Other Information" required>
                            </span>
                            <p id="ff1">Payment</p>

                        </span>

                        <input type="hidden" name="name" value="Product">
                        <input type="hidden" name="amount" value="<%= total %>">
                        <input type="hidden" name="description" value="Product Buying">
                    <div id="f3">
                        <% if(login_count==0){ %>
                            <input type="submit" id="paybtn" value="Pay Now">
                        <% } else{ %>
                            <input type="submit" value="Pay Now">
                        <% } %>
                    </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="bill">
            <h2>Cart Totals</h2>
            <div class="subtot">
                <div class="inside">Subtotal</div>
                <div class="inside">₹<%= total %></div>
            </div>
            <div class="tot">
                <div class="inside">Total</div>
                <div class="inside">₹<%= total %></div>
            </div>
        </div>
    </div>
    <%- include('../partials/footer') %>
</body>
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script src="../src/checkout.js"></script>

</html>